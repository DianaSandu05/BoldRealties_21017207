@using BoldRealties.Models

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserPanel_Layout.cshtml";
}
@model  IEnumerable<PropertiesRS>

<div class="container p-2">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class= "text-primary">Properties List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="PropertiesRS" asp-action="Upsert" class="btn btn-primary"> Add new property </a>
        </div>
    </div>
    <table class= "table table-table-bordered table-table-striped">
        <thead>
            <tr>
                <th>Property ID</th>
                 <th>Property address</th>
                <th>Market Price</th>
                <th> Property Type</th>
                <th>Bedrooms Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
             <tr>
                <td>@item.ID</td>
                <td>@item.marketPrice</td>
                <td>@item.propertyAddress</td>
                <td>@item.propertyType</td>
                <td>@item.bedsNo</td>
                <td>
                    <a asp-controller="PropertiesRS" asp-action="EditProperties" asp-route-id="@item.ID" class="btn btn-primary mx-2">
                       <i class="bi bi-file-earmark-richtext"></i>
                     </a>
                       <a   class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>
                        </a>
                          <a asp-controller="PropertiesRS" asp-action="DeleteProperties" asp-route-id="@item.ID"  class="btn btn-danger mx-2">
                       <i class="bi bi-trash"></i>
                        </a>

                    </td>
            </tr>
            }
           

        </tbody>
    </table>
</div>


