@using BoldRealties.Models
@model BoldRealties.Models.ViewModels.InvoicesVM
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_UserPanel_Layout.cshtml";
}

<form method="post">
    <div class="border p-3 mt-4">
        <input asp-for="invoices.Id" hidden />
        <input asp-for="invoices.filePath" hidden />
         <a asp-page="/maintenanceJobs/Index" class="btn btn-primary">Jobs List</a>
        <div class= "row pb-2">
            <h2 cass="text-primary pl-3"> Create job</h2>
        </div>
        <div class="mb-3">
           <label asp-for="invoices.Due_Date">Invoice Due Date</label>
            <input asp-for="invoices.Due_Date" class="form-control" />
            <span asp-validation-for="invoices.Due_Date" class="text-danger"></span>
        </div>
       
        <div class="mb-3">
           <label asp-for="invoices.invoice_No">Invoices number</label>
            <input asp-for="invoices.invoice_No" class="form-control" />
            <span asp-validation-for="invoices.invoice_No" class="text-danger"></span>
        </div>
        
     <div class="mb-3">
           <label asp-for="invoices.tenancies.Id">Diagnostics</label>
            <input asp-for="invoices.tenancies.Id" class="form-control" />
            <span asp-validation-for="invoices.tenancies.Id" class="text-danger"></span>
        </div>
          <div class="mb-3 col-6">
			<label asp-for="invoices.filePath"></label>
			<input asp-for="invoices.filePath" type="file" id="uploadBox" name="file" class="form-control" />
		</div>
       
   
	
        <button type="submit" class="btn btn-primary">Create</button>
         <a asp-controller="Invoices" asp-action="Index" class="btn btn-primary">Jobs List</a>
    </div>
</form>





