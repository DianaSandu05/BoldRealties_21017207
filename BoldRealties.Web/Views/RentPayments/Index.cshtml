@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using BoldRealties.Models
@model  IEnumerable<OrderHeader>

<div class="container p-2">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class= "text-dark">Rent payments</h2>
        </div>
    </div>
    <table class= "table table-table-bordered table-table-striped">
        <thead>
            <tr>
                <th>User ID</th>
                 <th>First Name</th>
                <th>Last Name</th>
                <th>Payment Due Date</th>
                <th>Payment Status</th>
                <th>Payment Date</th>
                <th>Amount paid</th>
                <th>Tenancy Id</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
             <tr>
                <td>@item.UserId</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.PaymentDueDate</td>
                <td>@item.PaymentStatus</td>
                <td>@item.PaymentDate</td>
                <td>@item.PaymentTotal</td>
            </tr>
            }
        </tbody>
    </table>
</div>







