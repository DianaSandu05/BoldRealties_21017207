                </div>





             






                 
        <div class="row pb-3 backgroundWhite">
         


   @foreach (var properties in Model)
        {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@properties.imagePath" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@properties.propertyAddress</b></p>
                            @*<p class="card-title text-primary">by <b>@product.Artist</b></p>*@
                        </div>
                        <div style="padding-left:5px;">
                            <p>List Price: <b class="">$@properties.marketPrice.ToString("0.00")</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">Specification: <b class="">@properties.estateDescription</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@properties.ID">Details</a>
                    </div>
                </div>
            </div>
        </div>
        }
        
