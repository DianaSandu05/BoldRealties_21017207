@using BoldRealties.Models
@model Accounts
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_UserPanel_Layout.cshtml";
}
<form method="post">
    <div class="border p-3 mt-4">
         <a asp-page="/User/Index" class="btn btn-primary">Accounts List</a>
        <div class= "row pb-2">
            <h2 cass="text-primary pl-3"> Add Accounts Record</h2>
        </div>
        <div class="mb-3">
           <label asp-for="balance_due">Balance Due</label>
            <input asp-for="balance_due" class="form-control" />
            <span asp-validation-for="balance_due" class="text-danger"></span>
        </div>

        <div class="mb-3">
           <label asp-for="charged_date">Charged Date</label>
            <input asp-for="charged_date" class="form-control" />
            <span asp-validation-for="charged_date" class="text-danger"></span>
        </div>
           <div class="mb-3">
        <label asp-for="isReceived">Received?</label>
        @Html.DropDownList("Received?", new SelectList(new[] { "True", "False" }), new { @class="form-control select1"})
       <span asp-validation-for="isReceived" class="text-danger"></span>
    </div>
        <div class="mb-3">
           <label asp-for="UserID">User ID</label>
            <input asp-for="UserID" class="form-control" />
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>
      
        --> TO DO -->

        --> Functionality for Balance Due -- generated from system directly -->

        --> Foreign keys such as User ID, accounts ID, payment ID generated by the system -->

        <button type="submit" class="btn btn-primary">Add</button>
         <a asp-controller="User" asp-action="Index" class="btn btn-primary">User List</a>
    </div>
</form>




